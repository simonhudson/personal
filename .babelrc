{
    "presets": [
        "@babel/preset-env",
        ["@babel/preset-react", {"runtime": "automatic"}],
        "next/babel"
    ],
    "plugins": [
        ["styled-components", { "ssr": true, "displayName": true } ],
        ["babel-plugin-root-import",
            {
                "paths": [
                    {
                        "rootPathPrefix": "~",
                        "rootPathSuffix": "src"
                    },
                    {
                        "rootPathPrefix": "%",
                        "rootPathSuffix": "public"
                    },
                    {
                        "rootPathPrefix": "&",
                        "rootPathSuffix": "test"
                    }
                ]
            }
        ]
    ]
}
