{
    "presets": [
    "@babel/preset-env",
    "@babel/preset-react",
    "@babel/preset-typescript",
    "next/babel"
    ],
    "plugins": [
        ["styled-components", { "ssr": true, "displayName": true } ],
        ["babel-plugin-root-import",
            {
                "paths": [
                    {
                        "rootPathPrefix": "src",
                        "rootPathSuffix": "src"
                    },
                    {
                        "rootPathPrefix": "public",
                        "rootPathSuffix": "public"
                    },
                    {
                        "rootPathPrefix": "test",
                        "rootPathSuffix": "test"
                    }
                ]
            }
        ]
    ]
}